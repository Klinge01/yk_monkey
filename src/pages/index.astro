// Redirect to default language
// Construct the redirect URL with the base path included
const base = import.meta.env.BASE_URL || '/';
// Ensure base ends with / and construct the redirect path
const basePath = base.endsWith('/') ? base : base + '/';
const redirectPath = `${basePath}de/`;
// Use Astro.url to construct a proper URL for the redirect (required for static builds)
return Astro.redirect(new URL(redirectPath, Astro.url.origin).pathname);
