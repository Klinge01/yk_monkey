---
interface Props {
  class?: string;
  hover?: boolean;
  gradient?: boolean;
  style?: string;
}

const { class: className = '', hover = true, gradient = false, style } = Astro.props;
---

<div
  class:list={[
    'glass rounded-2xl p-6 transition-all duration-300',
    {
      'hover:-translate-y-1 hover:border-primary-500/30 hover:shadow-xl hover:shadow-primary-500/10':
        hover,
      'bg-gradient-to-br from-primary-500/5 to-accent-500/5': gradient,
    },
    className,
  ]}
  style={style}
>
  <slot />
</div>


