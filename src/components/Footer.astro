---
import { getTranslation, type Language } from '@i18n/translations';
import { getBasePathFromAstroUrl, normalizeBasePath } from '@i18n/utils';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslation(lang);
// Detect base path at runtime (works for localhost, GitHub Pages, and production)
const basePath = normalizeBasePath(getBasePathFromAstroUrl(Astro.url));

const currentYear = new Date().getFullYear();
---

<footer class="relative mt-20 border-t border-white/5 bg-dark-950/50">
  <!-- Gradient line at top -->
  <div
    class="absolute left-0 right-0 top-0 h-px bg-gradient-to-r from-transparent via-primary-500/50 to-transparent"
  >
  </div>

  <div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid gap-12 md:grid-cols-2 lg:grid-cols-4">
      <!-- Brand Column -->
      <div class="lg:col-span-2">
        <a href={`${basePath}${lang}/`} class="group inline-flex items-center gap-3">
          <div
            class="flex h-12 w-12 items-center justify-center rounded-xl bg-gradient-to-br from-primary-500 to-accent-500"
          >
            <span class="font-display text-2xl font-bold text-white">YK</span>
          </div>
          <span class="font-display text-2xl tracking-wide text-white"
            >YK<span class="gradient-text">MONKEY</span></span
          >
        </a>
        <p class="mt-4 max-w-md text-dark-300">
          {t.footer.tagline}
        </p>
        <!-- Social Links -->
        <div class="mt-6 flex gap-4">
          <a
            href="#"
            class="flex h-10 w-10 items-center justify-center rounded-lg bg-white/5 text-dark-300 transition-all hover:bg-primary-500/20 hover:text-primary-400"
            aria-label="Instagram"
