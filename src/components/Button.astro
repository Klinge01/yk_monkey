---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  fullWidth?: boolean;
  external?: boolean;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  class: className = '',
  fullWidth = false,
  external = false,
} = Astro.props;

const baseClasses =
  'inline-flex items-center justify-center font-semibold rounded-full transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-dark-950';

const variantClasses = {
  primary:
    'bg-gradient-to-r from-primary-500 to-primary-600 text-white hover:from-primary-400 hover:to-primary-500 glow-hover',
  secondary:
    'bg-gradient-to-r from-accent-500 to-accent-600 text-dark-950 hover:from-accent-400 hover:to-accent-500',
  outline:
    'border-2 border-primary-500 text-primary-400 hover:bg-primary-500/10 hover:border-primary-400',
  ghost: 'text-dark-200 hover:text-white hover:bg-white/5',
};

const sizeClasses = {
  sm: 'px-4 py-2 text-sm gap-2',
  md: 'px-6 py-3 text-base gap-2',
  lg: 'px-8 py-4 text-lg gap-3',
};

const classes = [
  baseClasses,
  variantClasses[variant],
  sizeClasses[size],
  fullWidth ? 'w-full' : '',
  className,
]
  .filter(Boolean)
  .join(' ');

const Tag = href ? 'a' : 'button';
const externalAttrs = external ? { target: '_blank', rel: 'noopener noreferrer' } : {};
---

<Tag href={href} class={classes} {...externalAttrs}>
  <slot />
</Tag>


